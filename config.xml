<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android" >
    <name>VacunAr</name>
    <description>
        Llevá tu libreta de vacunación siempre con vos.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="login.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="2.4.3" />
    <icon src="www/img/icono.png" />
<platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="www/splash.png" density="land-hdpi"/>
    <splash src="www/splash.png" density="land-ldpi"/>
    <splash src="www/splash.png" density="land-mdpi"/>
    <splash src="www/splash.png" density="land-xhdpi"/>
    <splash src="www/splash.png" density="land-xxhdpi"/>

    <splash src="www/splash.png" density="port-hdpi"/>
    <splash src="www/splash.png" density="port-ldpi"/>
    <splash src="www/splash.png" density="port-mdpi"/>
    <splash src="www/splash.png" density="port-xhdpi"/>
    <splash src="www/splash.png" density="port-xxhdpi"/>
</platform>
<preference name="SplashScreenDelay" value="10000" />
<preference name="AutoHideSplashScreen" value="true" />


</widget>
